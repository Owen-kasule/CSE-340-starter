<% if (flash.notice) { %>
  <p class="notice"><%= flash.notice %></p>
<% } %>

<% if (accountData.account_type === 'Employee') { %>
  <h1>Welcome Employee <%= accountData.account_firstname %></h1>
<% } else if (accountData.account_type === 'Admin') { %>
  <h1>Welcome Administrator <%= accountData.account_firstname %></h1>
<% } else { %>
  <h1>Welcome <%= accountData.account_firstname %></h1>
<% } %>

<div class="account-info">
  <p><strong>Name:</strong> <%= accountData.account_firstname %> <%= accountData.account_lastname %></p>
  <p><strong>Email:</strong> <%= accountData.account_email %></p>
  <p><strong>Account Type:</strong> <%= accountData.account_type %></p>
</div>

<div class="account-actions">
  <a href="/account/update/<%= accountData.account_id %>" class="btn">Update Account Information</a>
  
  <% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
    <h2>Inventory Management</h2>
    <p>You have access to inventory management features.</p>
    <a href="/inv" class="btn">Manage Inventory</a>
  <% } %>
</div>